<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="80dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="#454545"
                android:paddingBottom="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/img_course_it"
                    tools:srcCompat="@drawable/img_course_it" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="สาขาเทคโนโลยีสารสนเทศ (IT)"
                    android:textColor="#0A2A7A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/icon_arrow_right_black"
                        tools:srcCompat="@drawable/icon_arrow_right_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="หลักสูตรปริญญาตรี วิทยาศาสตรบัณฑิต"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/icon_arrow_right_black"
                        tools:srcCompat="@drawable/icon_arrow_right_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="ระยะเวลาการศึกษา : 4 ปี"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnCourseIT"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#1F5EFE"
                    android:lineSpacingExtra="10sp"
                    android:text="รายละเอียด"
                    android:textSize="12sp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/icon_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="#454545"
                android:paddingBottom="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/img_course_iti"
                    tools:srcCompat="@drawable/img_course_iti" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="สาขาวิชาเทคโนโลยีสารสนเทศ ต่อเนื่อง (ITI)"
                    android:textColor="#0A2A7A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/icon_arrow_right_black"
                        tools:srcCompat="@drawable/icon_arrow_right_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="หลักสูตรปริญญาตรี อุตสาหกรรมศาสตรบัณฑิต"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/icon_arrow_right_black"
                        tools:srcCompat="@drawable/icon_arrow_right_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="ระยะเวลาการศึกษา : 2 ปี"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnCourseITI"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#1F5EFE"
                    android:lineSpacingExtra="10sp"
                    android:text="รายละเอียด"
                    android:textSize="12sp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/icon_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="#454545"
                android:paddingBottom="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/img_course_ine"
                    tools:srcCompat="@drawable/img_course_ine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="สาขาวิศวกรรมสารสนเทศและเครือข่าย (INE)"
                    android:textColor="#0A2A7A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/icon_arrow_right_black"
                        tools:srcCompat="@drawable/icon_arrow_right_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="หลักสูตรปริญญาตรี วิศวกรรมศาสตรบัณฑิต"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/icon_arrow_right_black"
                        tools:srcCompat="@drawable/icon_arrow_right_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="ระยะเวลาการศึกษา : 4 ปี"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnCourseINE"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#1F5EFE"
                    android:lineSpacingExtra="10sp"
                    android:text="รายละเอียด"
                    android:textSize="12sp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/icon_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="#454545"
                android:paddingBottom="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/img_course_inet"
                    tools:srcCompat="@drawable/img_course_inet" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="สาขาวิชาวิศวกรรมสารสนเทศและเครือข่าย (เทียบโอน) (INET)"
                    android:textColor="#0A2A7A"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/icon_arrow_right_black"
                        tools:srcCompat="@drawable/icon_arrow_right_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="หลักสูตรปริญญาตรี วิศวกรรมศาสตรบัณฑิต"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/icon_arrow_right_black"
                        tools:srcCompat="@drawable/icon_arrow_right_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="ระยะเวลาการศึกษา : 3 ปี"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnCourseINET"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#1F5EFE"
                    android:lineSpacingExtra="10sp"
                    android:text="รายละเอียด"
                    android:textSize="12sp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/icon_arrow_right" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#0C3A8D"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_bold"
            android:text="หลักสูตร"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>